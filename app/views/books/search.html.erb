<main>
  <%= form_with url: search_books_path, method: :get, local: true do |f| %>
    <div style="display: grid; grid-template-columns: 1fr auto; gap: 0.5rem;">
      <%= f.text_field :query, 
                       value: params[:query], 
                       placeholder: "Search by title or author" %>
      <%= f.submit "Search" %>
    </div>
  <% end %>

  <hr>

  <!-- ISBN Photo Search -->
  <%= form_with url: search_by_isbns_books_path,
                method: :post,
                local: true,
                multipart: true,
                data: { controller: "file-upload" } do |f| %>
    <%= f.file_field :photos,
                     multiple: true,
                     accept: 'image/*',
                     data: {
                       file_upload_target: "fileInput",
                       action: "file-upload#submitForm"
                     },
                     style: "display: none;" %>
    <button type="button" data-action="file-upload#promptFileSelection">
      Scan ISBN
    </button>
  <% end %>

  <!-- Results -->
  <% if @books.any? %>
    <!-- Your existing code to display the search results -->
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Level</th>
          <% if params[:detailed] == "true" %>
            <th>AR Points</th>
            <th>Interest Level</th>
            <th>Word Count</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.atos_book_level %></td>
            <% if params[:detailed] == "true" %>
              <td><%= book.ar_points %></td>
              <td><%= book.interest_level %></td>
              <td><%= number_with_delimiter(book.word_count) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% elsif params[:query].present? %>
    <p>No matches found</p>
  <% end %>
</main>