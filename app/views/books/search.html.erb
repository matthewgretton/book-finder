<div class="container">
  <!-- Keyword Search Form -->
  <%= form_with url: search_books_path, method: :get, local: true do |f| %>
    <div style="display: flex; gap: 8px; margin-bottom: 16px;">
      <%= f.text_field :query, value: params[:query], placeholder: "Title, Author,...", style: "flex: 1;" %>
      <button type="submit" class="button">🔍</button>
    </div>
  <% end %>

  <!-- ISBN Photo Search Form -->
  <%= form_with url: search_by_isbns_books_path,
                method: :post,
                local: true,
                multipart: true,
                data: { controller: "file-upload" } do |f| %>
    <div>
      <%= f.file_field :photos,
                       multiple: true,
                       accept: 'image/*',
                       data: {
                         file_upload_target: "fileInput",
                         action: "file-upload#submitForm"
                       },
                       style: "display: none;" %>
      <button type="button" class="button" data-action="file-upload#promptFileSelection">📷 ISBN</button>
    </div>
  <% end %>

  <!-- Search Results -->
  <% if @books.any? %>
    <!-- Your existing code to display the search results -->
  <% elsif params[:query].present? %>
    <p><mark>No books found matching your search criteria</mark></p>
  <% end %>
</div>